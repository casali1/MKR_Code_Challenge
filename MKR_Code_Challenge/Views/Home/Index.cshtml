@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    <h1>Company X</h1>
</div>
<div class="row">
    <div class="col-md-4">
        <h2>Welcome to Company X</h2>
        <p>
            Company X is a sample application that
            demonstrates a 1 to many relationship in Entity Framework Core
            and ASP.NET Core MVC web application.
        </p>
        <p>
            Click the link "Employees" above to view Employee list.  Click the link "Home" to return to this page.
        </p>
        <p>
            The Dialog Box(as shown to the right) can be closed by clicking on the "X" symbol or the "Close" button.
            If neither action is done within a few seconds, the Dialog Box will fade away on its own.
        </p>
    </div>

    <div id="myModal">
        <div class="modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Login</h3>
                    <button class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="inputUserName">Username</label>
                            <input class="form-control" placeholder="Login Username" type="text" id="inputUserName" />
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Password</label>
                            <input class="form-control" placeholder="Login Password" type="text" id="inputPassword" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary">Login</button>
                    <button id="myButton" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $(".close").click(function () {
            $("#myModal").hide();
        });

        $("#myButton").click(function () {
            $("#myModal").hide();
        });

        $("#myModal").delay(4000).fadeOut(1000);
    });
</script>




